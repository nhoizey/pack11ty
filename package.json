{
  "name": "pack11ty",
  "version": "1.0.0-alpha.7",
  "title": "Pack11ty",
  "description": "an heavily opinionated Eleventy template project",
  "homepage": "https://pack11ty.dev/",
  "author": {
    "name": "Nicolas Hoizey",
    "url": "https://nicolas-hoizey.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhoizey/pack11ty.git"
  },
  "bugs": {
    "url": "https://github.com/nhoizey/pack11ty/issues"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf _site",
    "sass": "sass --no-source-map assets/sass:_site/css",
    "postcss": "postcss _site/css/*.css --no-map --replace",
    "build:sass": "npm-run-all --sequential sass postcss",
    "watch:sass": "sass --source-map-urls=absolute --watch assets/sass:_site/css",
    "build:js": "rollup -c",
    "watch:js": "rollup -c --watch",
    "build:eleventy": "eleventy",
    "watch:eleventy": "eleventy --serve",
    "serviceworker": "workbox injectManifest workbox.config.js",
    "start": "cross-env NODE_ENV=development npm-run-all --sequential clean build:js --parallel watch:*",
    "debug:start": "DEBUG=Eleventy* npm start",
    "build": "cross-env NODE_ENV=production npm-run-all --sequential clean --parallel build:js build:sass --sequential build:eleventy serviceworker",
    "debug:build": "DEBUG=Eleventy* npm run build"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@jlengstorf/get-share-image": "^0.8.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@sindresorhus/slugify": "~1.1",
    "autoprefixer": "~10.0.4",
    "babel-loader": "^8.1.0",
    "cheerio": "~1.0.0-rc.3",
    "cross-env": "^7.0.3",
    "cssnano": "~4.1.10",
    "dotenv": "^8.2.0",
    "eleventy-plugin-images-responsiver": "^1.8.2",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "fast-glob": "^3.2.4",
    "html-entities": "^1.3.1",
    "html-minifier": "^4.0.0",
    "image-size": "^0.9.3",
    "lodash": "^4.17.20",
    "markdown-it": "~11.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "~6.0",
    "markdown-it-attrs": "^3.0.3",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-container": "~3.0",
    "markdown-it-footnote": "~3.0.2",
    "moment": "~2.29.1",
    "node-fetch": "^2.6.1",
    "npm-run-all": "~4.1.5",
    "path": "^0.12.7",
    "postcss-cli": "~8.3.0",
    "postcss-hash": "~2.0.0",
    "prettier": "2.2.1",
    "require-dir": "^1.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.34.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-entrypoint-hashmanifest": "^0.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "sanitize-html": "^2.2.0",
    "sass": "~1.29.0",
    "truncate-html": "^1.0.3",
    "twitter-text": "^3.1.0",
    "workbox-broadcast-update": "6.0.0",
    "workbox-cacheable-response": "5.1.4",
    "workbox-cli": "^6.0.0",
    "workbox-core": "5.1.4",
    "workbox-expiration": "5.1.4",
    "workbox-google-analytics": "6.0.0",
    "workbox-precaching": "5.1.4",
    "workbox-routing": "5.1.4",
    "workbox-strategies": "6.0.0"
  }
}
